  escape-character:
    name: constant.character.escape.regexp
    match: |
      (?x)
        \\ (
              x[0-9A-Fa-f]{2}
              | 0[0-7]{1,2}
              | [0-7]{3}
           )

  escape-unicode:
    name: constant.character.unicode.regexp
    match: |
      (?x)
